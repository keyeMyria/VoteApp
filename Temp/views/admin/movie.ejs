<%- include('header') -%>

<div class="main-block">
    <table class="table table-hover course-table table-striped">
        <thead>
        <tr>
            <th>海报图</th>
            <th>电影名</th>
            <th>电影类型</th>
            <th>电影描述</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody id="tbody">


        <% for(var i = 0; i < data.status; i++){  %>
            <tr>
                <td><img class="logo" src="<%=data.list[i].url%>" alt=""></td>
                <td><%=data.list[i].cineName%></td>
                <td>
                    <% for(var j = 0; j < data.list[i].type.length; j++){  %>
                        <span class="label label-primary"><%=data.list[i].type[j]%></span>
                    <%	} %>
                </td>
                <td class="desc-td"><p class="description"><%=data.list[i].des%></p></td>
                
                <td><input type="hidden" class="cineId" value="<%=data.list[i].cineId%>"><button type="button"  class="btn btn-danger Sdel">删除</button></td>
            </tr>
        <%	} %>



        </tbody>
    </table>


    <button type="button" class="btn btn-primary btn-lg btn-block" id="propAdd"  data-toggle="modal" data-target="#addGoods">添加电影</button>
</div>

<!-- 添加电影 -->
<div class="modal fade" id="addGoods" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">添加电影</h4>
            </div>
            <div class="modal-body">

                <form id="formData" class="form-horizontal goods-form">
                    <input type="hidden" id="goodsId" name="goodsId" value="0">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">电影名：</label>
                            <div class="col-sm-9">
                                <input type="text" name="cineName" id="cineName" class="form-control" placeholder="电影名">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">电影海报图：</label>
                            <div class="col-sm-6">
                                <input type="file" id="uploadImg"  class="form-control">
                                <input type="hidden" id="movieImg">
                                <img src="" class="movieImg_preview" id="movieImg_preview" alt="">
                            </div>

                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-3 control-label">电影类型：</label>
                            <div class="col-sm-9">
                                <input type="text" name="type" id="type" class="form-control" placeholder="电影类型">
                            </div>
                        </div>
                        
                        
                        <div class="form-group">
                            <label class="col-sm-3 control-label">电影描述：</label>
                            <div class="col-sm-9">
                                <input type="text" name="des" id="des" class="form-control" placeholder="电影描述">
                            </div>
                        </div>
                        
                        
                        

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" id="add-movie">确认添加</button>
            </div>
        </div>
    </div>
</div>





<%- include('footer') -%>

